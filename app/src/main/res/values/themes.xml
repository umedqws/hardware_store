<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HardwareStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF6D00</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorSecondaryVariant">#FF6D00</item>
        <item name="colorSecondary">#FF6D00</item>
    </style>


    <style name="CardView" parent="CardView.Dark">
        <item name="android:bottomRightRadius">80dp</item>
        <item name="android:bottomLeftRadius">24dp</item>
    </style>
</resources>